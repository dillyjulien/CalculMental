<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_podium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podium"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageOr"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/or"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_podium"/>

    <TextView
        android:id="@+id/text_score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="80dp"
        android:layout_marginVertical="40dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_podium" />

    <ImageView
        android:id="@+id/imageArgent"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/argent"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_score1"/>

    <TextView
        android:id="@+id/text_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="80dp"
        android:layout_marginVertical="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_score1" />

    <ImageView
        android:id="@+id/imageBronze"
        android:layout_width="50dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/bronze"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_score2"/>

    <TextView
        android:id="@+id/text_score3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="80dp"
        android:layout_marginVertical="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_score2" />
</android.support.constraint.ConstraintLayout>